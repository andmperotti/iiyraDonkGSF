          let descriptor = descriptorMatch ? descriptorMatch[1] : ''; 
          %>
              <tr class='requestedItem' data-id='<%=el._id%>'>
                  <td><%= el.requestedItem %></td>  
                  <td><a href="https://www.pathofexile.com/account/view-profile/<%=firstName%>-<%=descriptor%>"><%= el.userName %></a></td>  
                  <td><%= el.discordName%></td>
              </tr>
      <% }) %>
